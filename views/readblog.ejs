<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('./partials/head') %>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
  <%- include('./partials/nav') %>

  <!-- Blog Details -->
  <div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4 p-4 blog-card-green">
      <h1 class="fw-bold text-success"><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" class="img-fluid rounded mt-3 mb-4" style="max-width: 600px;" />
      <p class="blog-body-text"><%= blog.body %></p>
    </div>
  </div>

  <!-- Author -->
  <div class="container mt-4">
    <div class="d-flex align-items-center p-3 rounded-3 shadow-sm author-card">
      <img src="<%= blog.createdBy.profileImageURL %>" class="rounded-circle me-3 border border-success" width="60px" height="60px" />
      <h6 class="mb-0 fw-semibold text-success"><%= blog.createdBy.fullName %></h6>
    </div>
  </div>

  <!-- Comments -->
  <div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4 p-4 blog-card-green">
      <h4 class="fw-bold text-success">ðŸ’¬ Comments (<%= comments.length %>)</h4>

      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post" class="mt-3">
          <div class="mb-3">
            <input type="text" name="content" class="form-control rounded-3" placeholder="Enter Your Comment" />
            <button class="btn btn-success mt-2 px-3 py-1 rounded-3">Add</button>
          </div>
        </form>
      <% } %>

      <div class="mt-4">
        <% comments.forEach(comment => { %>
          <div class="d-flex align-items-start mb-3 p-2 rounded-3 comment-box">
            <img src="<%= comment.createdBy.profileImageURL %>" class="rounded-circle me-3 border border-success" width="45px" height="45px" />
            <div>
              <h6 class="fw-semibold text-success mb-1"><%= comment.createdBy.fullName %></h6>
              <p class="mb-0"><%= comment.content %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <%- include('./partials/script') %>
</body>
</html>
